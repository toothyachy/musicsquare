<h1>Create New Request</h1>

  <%= simple_form_for [ @listing, @request ] do |f| %>
    <%= f.input :requestor_comment %>
    <div class="row" data-controller="requestpicker" data-requestpicker-listing-id="<%= @listing.id%>">
      <div class="col-6">
        <%= f.input :request_date,
                  as: :string,
                  label: "Available dates",
                  input_html: {
                    data: { "requestpicker-target": "flatpickr"}
                  } %>
      </div>
      <div class="col-6">
        <%= f.input :request_time,
                  as: :select,
                  label: "Available timeslots",
                  input_html: {
                    class: "d-none",
                    data: { "requestpicker-target": "timeslotpicker"}
                  }
        %>
      </div>
      <%= f.submit class:"btn btn-primary mt-3" %>
    </div>
  <% end %>
